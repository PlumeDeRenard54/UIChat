<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.uichat.JoinController" styleClass="global" >
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="UserName"/>
        <TextField fx:id="username" promptText="UserName"/>
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="WhichRoom"/>
        <TextField fx:id="textfield" promptText="Room" text="General"/>
    </HBox>
    <Button text="Join" onAction="#logRoom"/>
</VBox>
