<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="global" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.uichat.JoinController">
    <center>
        <VBox alignment="CENTER">
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="UserName" />
                <TextField fx:id="username" promptText="UserName" />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="WhichRoom" />
                <TextField fx:id="textfield" promptText="Room" text="General" />
            </HBox>
            <Button onAction="#logRoom" text="Join" />
        </VBox>
    </center>

    <left>
        <VBox>
            <Label text="Commandes :"/>
            <Label text="/Clear"/>
            <Label text="/broadcast"/>
        </VBox>
    </left>
</BorderPane>
