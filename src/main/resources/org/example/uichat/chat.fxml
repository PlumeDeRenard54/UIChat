<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:controller="org.example.uichat.HelloController" styleClass="global" xmlns:fx="http://javafx.com/fxml">

    <top>
        <TextField fx:id="UserName" />
        <!--TODO Liste des rooms (prive/public) -->
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Label fx:id="welcomeText" text="Please Talk"/>
            <TextArea fx:id="textArea" editable="false" styleClass="texte"/>
            <TextField fx:id="textEntry" onAction="#onHelloButtonClick"/>
            <Button text="Submit" onAction="#onHelloButtonClick"/>
        </VBox>
    </center>
</BorderPane>
